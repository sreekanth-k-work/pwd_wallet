<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/black"
    android:orientation="vertical">
<LinearLayout
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dip"
            android:id="@+id/id_back_btn"
            android:layout_marginTop="34dp"
            android:gravity="center"
            android:background="@drawable/ic_arrow_back"
            android:layout_marginBottom="200dip"
            android:layout_height="50dip"/>
    <TextView
        android:layout_width="match_parent"
        android:text="DETAILS"
        android:layout_marginBottom="200dip"
        android:id="@+id/id_details_heading_tv"
        android:layout_marginTop="40dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_height="50dip"/>
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">
<GridLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:padding="16dp"
    android:rowCount="3">

    <!-- Website Key-Value Pair -->
    <TextView
        android:id="@+id/websiteKeyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Website"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="end" />


    <TextView
        android:id="@+id/websiteValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dip"
        android:text="www.example.com"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_gravity="start" />

    <!-- Username Key-Value Pair -->
    <TextView
        android:id="@+id/usernameKeyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="Username"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/usernameValueTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="20dip"
        android:text="user123"
        android:textSize="20sp"
        android:textStyle="normal"
        android:layout_gravity="start" />

    <!-- Password Key-Value Pair -->
    <TextView
        android:id="@+id/passwordKeyTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textSize="30sp"
        android:textStyle="bold"
        android:gravity="end" />

    <LinearLayout android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/passwordValueTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="20dip"
            android:text="*********"
            android:textSize="20sp"
            android:textStyle="normal"
            android:layout_gravity="start" />
        <ImageView
            android:id="@+id/id_eye_icon"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_eye_closed"/>
    </LinearLayout>
</GridLayout>
</LinearLayout>
</LinearLayout>
</LinearLayout>